{
  "version": 2,
  "name": "url-shortener",
  "buildCommand": "npm run build",
  "builds": [
    {
      "src": "dist/src/server.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/src/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "dist/src/server.js": {
      "maxDuration": 30
    }
  }
}

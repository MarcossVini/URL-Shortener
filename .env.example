# URL Shortener - Configuração de Ambiente
# Copie este arquivo para .env e preencha com seus valores

# Configuração do Servidor
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Configuração do Banco de Dados
DATABASE_URL="postgresql://shortener_user:shortener_pass@localhost:5432/shortener_db"

# Configuração JWT
JWT_SECRET=sua_chave_secreta_super_segura_aqui_com_pelo_menos_32_caracteres

# Configuração de Logs
LOG_LEVEL=info

# Configuração do Docker (se usando)
POSTGRES_USER=shortener_user
POSTGRES_PASSWORD=shortener_pass
POSTGRES_DB=shortener_db

# Configuração de CORS (opcional)
CORS_ORIGIN=http://localhost:3000

# Configuração de Rate Limiting (opcional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuração de Swagger (opcional)
SWAGGER_ENABLED=true
